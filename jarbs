#!/bin/bash
#Gets needed file from github
git clone https://github.com/JakeRoggenbuck/ConfigFiles ~/Downloads/ConfigFiles
git clone https://github.com/JakeRoggenbuck/.scripts.git ~/.scripts 

#Removes and adds dirs
rm -ri ~/Desktop

mv ~/Templates ~/.templates

mkdir ~/Repos
mkdir ~/Resources

mkdir ~/Media

mv ~/Pictures ~/Media
mv ~/Music ~/Media
mv ~/Videos ~/Media

mkdir ~/.scripts
mkdir ~/.wallpaper
mkdir ~/.wallpaper2

#Moves needed config files
cd ~/Downloads/ConfigFiles
mv bspwm/ ~/.config/bspwm/     
mv sxhkd/ ~/.config/sxhkd/     
mv polybar/ ~/.config/polybar/ 
mv dunst/ ~/.config/dunst/     
mv .bashrc ~/
mv .wallpapers/ ~/

#Installs programs from array
bins=(neovim vim emacs feh eog ranger sxhkd bspwm polybar compton xfce4-terminal gimp kate firefox atom lxappearance ffmpeg)

for x in "${bins[@]}" 
do	
	echo Do you want $x? y/n
	read answere

	if [ $answere == 'y' ]
	then
		pacman -S $x || echo installing $x failed
	fi
done

