#Installs programs from array
bins=(neovim vim emacs feh eog ranger vifm mutt thunar fasd sxhkd bspwm polybar compton gcc xorg-xbacklight xfce4-terminal alacritty termite gimp kate firefox atom lxappearance ffmpeg dmenu rofi neofetch glava rhythmbox)

for x in "${bins[@]}" 
do      
        echo Do you want $x? y/n
        read answere

        if [ $answere == 'y' ]
        then
                pacman -S $x || echo installing $x failed
        fi
done
